extends layout

block content
  h1 #{title}

  form(method='POST' action='')
    div.form-group
      label(for='FirstName') First Name:
      input#name.form-control(type='text', placeholder='Enter your first name' name='FirstName' value=(undefined===participant ? '' : participant.FirstName))
    div.form-group
      label(for='LastName') Last Name:
      input#name.form-control(type='text', placeholder='Enter your last name' name='LastName' value=(undefined===participant ? '' : participant.LastName))
    div.form-group
      label(for='Email') Email Address:
      input#name.form-control(type='text', placeholder='Enter your email address' name='Email' value=(undefined===participant ? '' : participant.Email))
    div.form-group
      label(for='Address') Street Address:
      input#name.form-control(type='text', placeholder='Enter your address' name='Address' value=(undefined===participant ? '' : participant.Address))
    div.form-group
      label(for='ParticipantType') Participant Type:
      input#name.form-control(type='text', placeholder='Occupation' name='ParticipantID' value=(undefined===participant ? '' : participant.ParticipantID))
    div.form-group
      label(for='HSName') School Name:
      input#name.form-control(type='text', placeholder='Enter name of your School if applicable' name='HSName' value=(undefined===school ? '' : school.HSName))
    button.btn.btn-primary(type='submit') Submit

  if errors 
    ul
      for error in errors
        li!= error.msg