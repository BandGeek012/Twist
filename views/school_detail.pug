extends layout

block content

 h1 School: #{school.HSName}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Participants
    
    dl
    each participant in school_participants
      dt 
        a(href=participant.url) #{participant.ParticipantID}
      dd #{participant.summary}

    else
      p This school has no participants